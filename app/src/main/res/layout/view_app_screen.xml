<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/list_item_bg_pressed"
              android:paddingRight="5dp"
              android:paddingLeft="5dp"
              android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/sv_screens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_screens"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:weightSum="4"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/iv_screen_1"
                android:layout_width="90dp"
                android:layout_height="150dp"/>
            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/iv_screen_2"
                android:layout_width="90dp"
                android:layout_height="150dp"/>
            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/iv_screen_3"
                android:layout_width="90dp"
                android:layout_height="150dp"/>
            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/iv_screen_4"
                android:layout_width="90dp"
                android:layout_height="150dp"/>
            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/iv_screen_5"
                android:layout_width="90dp"
                android:layout_height="150dp"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>