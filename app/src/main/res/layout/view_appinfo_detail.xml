<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_bg_pressed">

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:id="@+id/tv_app_name"
            android:layout_toRightOf="@id/iv_app_icon"
            android:text="我是应用的标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:id="@+id/rb_star"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:rating="3"
            android:progressDrawable="@drawable/selector_rating_bar"
            android:layout_below="@id/tv_app_name"/>
        
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_download_num"
            android:text="下载量:100万+"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:layout_below="@id/iv_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="55dp"
            android:id="@+id/tv_version"
            android:text="版本:4.15"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorText"
            android:layout_toRightOf="@id/tv_download_num"
            android:layout_below="@id/iv_app_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_date"
            android:text="2017-5-25"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:layout_below="@id/tv_download_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_size"
            android:text="4.15MB"
            android:layout_alignLeft="@id/tv_version"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:layout_toRightOf="@id/tv_date"
            android:layout_below="@id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>