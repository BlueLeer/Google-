<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/selector_list_view_item_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_app_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="#0000"
                android:src="@drawable/ic_default"/>

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_app_icon"
                android:paddingTop="4dp"
                android:text="应用标题"
                android:textColor="@color/colorText"
                android:textSize="18sp"/>

            <RatingBar
                android:id="@+id/rb_app_star"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@id/tv_app_name"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_app_icon"
                android:isIndicator="true"
                android:progressDrawable="@drawable/selector_rating_bar"
                android:rating="2"/>

            <TextView
                android:id="@+id/tv_app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rb_app_star"
                android:layout_toRightOf="@id/iv_app_icon"
                android:text="4.07MB"
                android:textColor="#8000"
                android:textSize="18sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9000"/>

        <TextView
            android:padding="5sp"
            android:id="@+id/tv_app_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textSize="18sp"
            android:maxLines="1"
            android:paddingTop="4dp"
            android:text="这是应用描述这是应用描述这是应用描述这是应用描述这是应用描述这是应用描述"/>
    </LinearLayout>

</LinearLayout>